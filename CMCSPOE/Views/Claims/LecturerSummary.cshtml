@model IEnumerable<CMCSPOE.Models.LecturerSummaryViewModel>

@{
    ViewData["Title"] = "Lecturer Claims Summary";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lecturer Claims Summary</title>
    <style>
        /* General body styling with background color */
        body {
            font-family: "Times New Roman", serif;
            margin: 0;
            padding: 20px;
            background-color: #f7efd5; 
        }

        /* Content container styling */
        .content-wrapper {
            background-color: #fff8e6;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 3px 12px rgba(0, 0, 0, 0.2);
            max-width: 1000px;
            margin: 0 auto;
        }

        /* Heading styling */
        h1 {
            font-size: 26px;
            color: #664229; 
            text-align: center;
            margin-bottom: 25px;
        }

        /* Table styling */
        .table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
            background-color: #fffbf2;
            border: 1px solid #b89f86;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

            .table thead {
                background-color: #d4a373; 
                color: white;
            }

            .table th,
            .table td {
                padding: 14px;
                text-align: center;
                border-bottom: 1px solid #b89f86;
            }

            .table tbody tr:nth-child(odd) {
                background-color: #f4e3cb;
            }

            .table tbody tr:hover {
                background-color: #e0c3a7;
            }

        /* Button styling */
        .btn-primary {
            background-color: #8bc34a;
            color: white;
            font-size: 14px;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #7cb342;
            }
    </style>
</head>
<body>

    <div class="content-wrapper">
        <h1>Lecturer Claims Summary</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Lecturer Name</th>
                    <th>Total Owed</th>
                    <th>Total Hours Worked</th>
                    <th>Average Hourly Rate</th>
                    <th>Additional Notes</th>
                    <th>Last Submitted Date</th>
                    <th>Download Report</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.LecturerName</td>
                        <td>@item.TotalOwed.ToString("C")</td>
                        <td>@item.HoursWorked</td>
                        <td>@item.HourlyRate.ToString("C")</td>
                        <td>@item.AdditionalNotes</td>
                        <td>@item.SubmittedDate.ToShortDateString()</td>
                        <td>
                            <a href="@Url.Action("DownloadLecturerReport", "Claims", new { lecturerName = item.LecturerName })" class="btn-primary">
                                Download Report
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</body>
</html>