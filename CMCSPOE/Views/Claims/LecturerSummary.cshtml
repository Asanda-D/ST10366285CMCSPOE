@model IEnumerable<CMCSPOE.Models.LecturerSummaryViewModel>

@{
    ViewData["Title"] = "Lecturer Claims Summary";
}

<style>
    body {
        background-color: #FFE5B4; /* Warm light orange background */
        font-family: "Times New Roman", serif;
        color: #333;
    }

    .content-wrapper {
        background-color: rgba(255, 255, 255, 0.9);
        border-radius: 10px;
        padding: 20px;
        margin: 30px auto;
        max-width: 1200px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
        border: 2px solid #FFA500; /* Subtle orange border for contrast */
    }

    h1 {
        font-family: "Times New Roman", serif;
        color: #CC5500; /* A deeper shade for the title */
        text-align: center;
    }

    .table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
    }

    .table th {
        background-color: #FFA500; /* Warm orange header */
        color: white;
        font-weight: bold;
        padding: 10px;
    }

    .table td {
        padding: 10px;
        text-align: center;
        vertical-align: middle;
        border: 1px solid #CCC;
    }

    .btn-primary {
        background-color: #FF8C00; /* Slightly darker orange for buttons */
        border-color: #FF8C00;
        color: white;
    }

    .btn-primary:hover {
        background-color: #CC5500; /* Darker orange on hover */
        border-color: #CC5500;
    }
</style>

<div class="content-wrapper">
    <h1>Lecturer Claims Summary</h1>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Lecturer Name</th>
                <th>Total Owed</th>
                <th>Total Hours Worked</th>
                <th>Average Hourly Rate</th>
                <th>Additional Notes</th>
                <th>Last Submitted Date</th>
                <th>Download Report</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.LecturerName</td>
                    <td>@item.TotalOwed.ToString("C")</td>
                    <td>@item.HoursWorked</td>
                    <td>@item.HourlyRate.ToString("C")</td>
                    <td>@item.AdditionalNotes</td>
                    <td>@item.SubmittedDate.ToShortDateString()</td>
                    <td>
                        <a href="@Url.Action("DownloadLecturerReport", "Claims", new { lecturerName = item.LecturerName })" class="btn btn-primary">
                            Download Report
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>