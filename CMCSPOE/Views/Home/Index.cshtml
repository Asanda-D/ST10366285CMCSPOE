@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        /* General body styling */
        body {
            font-family: "Times New Roman", serif; /* Font consistent with other pages */
            margin: 0;
            padding: 20px;
            background-image: url('https://plus.unsplash.com/premium_photo-1673306778968-5aab577a7365?fm=jpg&q=60&w=3000&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MXx8YmFja2dyb3VuZCUyMGltYWdlfGVufDB8fDB8fHww'); /* Add your background image URL here */
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            color: #664229; 
        }

        /* Centered text styling */
        .text-center {
            text-align: center;
            background-color: rgba(255, 255, 255, 0.8); 
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 3px 12px rgba(0, 0, 0, 0.2);
            max-width: 800px; 
            margin: 0 auto;
        }

        /* Heading style */
        h1 {
            font-size: 2.5rem;
            margin-bottom: 20px;
        }

        /* Paragraph styling */
        p {
            font-size: 1.2rem; 
        }

        /* Link styling */
        a {
            color: #b85b24;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>

    <div class="text-center">
        <h1>Welcome to ST10366285's CMCS POE</h1>
        <p>We are pleased to have you use our services.</p>
        <p>For more information please contact Asanda Dimba.</p>
    </div>

</body>
</html>
